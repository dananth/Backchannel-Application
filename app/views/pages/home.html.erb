<% if signed_in? %>
        <table class="front" summary="For signed-in users">
                <tr>
                        <td class="main">
                                <h1 class="micropost">Post your Message here!</h1>
                                <%= render 'shared/micropost_form' %>
                                <%= render 'shared/feed' %>
                        </td>

                </tr>
        </table>
<% else %>
        <h1>Sample App</h1>
        <p>
        This is the home page for the
        <a href="http://localhost:3000/">Project 1</a>
        </p>
        <%= render 'shared/feed' , :collection => @feed_items %>
        <%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>
