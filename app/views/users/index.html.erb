<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
        <% @users.each do |user| %> 
                <li>
                <% if !(current_user.id == user.id)  %>
                        <%= link_to user.name, user %>
                        <% if current_user.admin? %>
                                | <%= link_to "delete", user, :method => :delete, :confirm => "You sure?",
                                        :title => "Delete #{user.name}" %>
                        <% end %>
                <% end %>
                </li>
        <% end %>
</ul>
<%= will_paginate %>
